<!--pages/circle/circle.wxml-->
<view class="pyg_home">
   <navigation-bar>
   </navigation-bar>
</view>
<Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
  <block   wx:if="{{tabs[0].isActive}}">
      <navigator>  
          <image src="{{shequList[0].url}}"   class="circle-img"></image>
      </navigator>
      <view  class="course-top">
            <view  class="top-title">热门圈子</view>
            <view class="more-info">  
               <view class="top-more">查看更多</view>
               <navigator>
                     <image src="../../icon/more.png" class="more-img"></image>
               </navigator>
            </view>     
      </view>   
      <view class="cr-content">
        <block  wx:for="{{circleList}}" wx:key="item">
         <navigator url="{{item.url}}" open-type="navigate" hover-class="none" >
           <view>
              <image src="{{item.src}}" class="cr-img"></image>
           </view>
           <view class="cr-title">{{item.title}}</view>  
         </navigator>
        </block>
      </view>
      <!--打卡记录浏览-->
      <view class="cr-main">
         <block wx:for="{{fabuList}}" wx:key="item">
           <block wx:for="{{item}}" wx:key="item">
            <view  class="cr-list">
             <!--使用者的个人信息部分-->
              <view  class="it-list">
              <!--头像-->
                <view class="it-img">   
                  <image src="{{item.touxiang}}"></image>
                </view>
              <!--昵称与等级-->
                <view class="it-zg">
                  <view class="it-name">{{item.username}}</view>
                  <view class="it-level">{{item.level}}</view>
                </view>
              <!--关注图标-->
                <view class="it-gz">
                  <image src="{{item.guanzhu}}"></image>
                </view>
              </view>
           <!--打卡记录标题-->
             <view class="ma-title">{{item.title}}</view>
           <!--打卡上传的图片展示-->
           <view class="ma-img">
              <block wx:for="{{item.img_show}}" wx:key="item">
                <view class="ma-sw">
                   <image src="{{item}}"></image>  
                </view>
              </block>
           </view>  
          </view>
           </block>
         </block>
      </view> 
  </block>
  <block  wx:elif="{{tabs[1].isActive}}">推荐</block>  
</Tabs>  
